{% extends 'layout/app.twig' %}
{%  block content %}
<section>
    <div class="container-fluid">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-4 col-md-6 backgroundFlag">
                <img src="{{ asset('img/flag-background.png') }}" alt="Flag USA">
            </div>
            <div class="col-lg-4 col-md-6 col-12">
                <img src="{{ asset('img/logo.png') }}" alt="Logo USA Exchange" class="float-right logoMobile">
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <img src="{{ asset('img/login.png') }}" alt="Login icon" class="img-fluid">
                <h1 class="title">Member login</h1>
                {% if flash.getMessage('error') != null %}
                    <div class="alert alert-danger mb-3" role="alert">
                        {{ flash.getMessage('error')|first }}
                    </div>
                {% endif %}
                <form class="formModified" method="post">
                    {{ csrf.field|raw }}
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><img src="{{ asset('img/username.png') }}" alt="Username"></div>
                        </div>
                        <input type="text" name="username" class="form-control inputModified" style="cli" placeholder="Username" required>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><img src="{{ asset('img/password.png') }}" alt="Password"></div>
                        </div>
                        <input type="password" name="password" class="form-control inputModified" placeholder="Password" required>
                    </div>
                    <div class="form-check d-inline-block float-left">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                        <label class="form-check-label labelModified" for="defaultCheck1">
                            Remember me
                        </label>
                    </div>
                    <span class="float-right "><a href="{{ path_for('auth.recovery') }}" class="labelModified">Forgot password?</a></span>
                    <button type="submit" class="btn btn-primary btnModified mt-5 mb-2">Login</button>
                </form>
                <p class="mt-5 mb-1">Not a member?</p>
                <a href="{{ path_for('auth.register') }}" class="btn btn-primary btnModifiedRegister">Create account</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}